@model Topo.Models.Login.LoginViewModel

@{
    ViewData["Title"] = "Login Page";
}


<form class="row g-3" asp-action="Login">
    <div class="mt-3 mb-3 row">
        <h2>Login</h2>
    </div>
    <div class="mb-3 row">
        <p>Enter you scout login details below and sign in</p><br />
    </div>
    <div class="mb-3 row">
        <label asp-for="SelectedBranch" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4 ">
            @Html.DropDownListFor(m => m.SelectedBranch, Model.Branches, "Select Branch", new { @class ="form-select" })
            <span asp-validation-for="SelectedBranch" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="mb-3 row">
        <div class="col-sm-4">
            <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
    </div>
</form>
